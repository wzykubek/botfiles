super + Return
	$TERMINAL
super + {_,ctrl,alt +} b
	{search,$BROWSER,torbrowser-launcher}
super + {_,shift +} d
	rofi -show {run,drun}
super + shift + s
	tgscreenkey
super + c
	compos

super + s; {t,m,n,v}
	{tuirent,mails,rss,fm}
super + a; {g,k,l,i,k}
	{gimp,keepassxc,libreoffice,inkscape,keepassxc}

super + m
	rofi-mpd -a
super + x
	slock
super + z
	powermenu
super + u
	update
super + n
	rofi-todo -f $HOME/doc/notes/notes.json
super + {_,shift +} e
	{unicode,fawesome}
super + w
	choosewall

{_,shift +} Print
	screenshot {_,--force}
{_,shift +} F1
	{_,u}mounter
{_,ctrl +} F10
	{curl 192.168.1.201/toggle.php && refbar,$BROWSER 192.168.1.201}
{_,shift +} F11
	blaze {_,-s}
End
	slock & systemctl suspend
Pause
	syncnow

# mute
XF86AudioMute
	amixer sset Master toggle && refbar
# volume control
XF86Audio{Raise,Lower}Volume
	amixer sset Master 5%{+,-} && refbar
# songs control
XF86Audio{Next,Prev}
	mpc {next,prev} && refbar
# pause/play
{XF86AudioPlay,super + slash}
	mpc toggle && refbar
# stop
XF86AudioStop
	mpc stop && refbar
